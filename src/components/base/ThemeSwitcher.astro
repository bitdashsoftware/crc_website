---
import ThemeScript from "@components/base/ThemeScript.astro";
---

<div class="inline-flex items-center space-x-2 mr-2">
  <!-- Theme 1: Default (Dark) -->
  <button
    id="theme-default"
    data-theme="default"
    class="theme-btn px-3 py-1 rounded-lg text-sm font-medium transition-all duration-200 bg-gray-800 border border-gray-600 text-white hover:bg-gray-700 active:bg-gray-900"
  >
    Default
  </button>
  
  <!-- Theme 2: Light -->
  <button
    id="theme-dark"
    data-theme="dark"
    class="theme-btn px-3 py-1 rounded-lg text-sm font-medium transition-all duration-200 bg-white border border-gray-300 text-gray-700 hover:bg-gray-50 active:bg-gray-100"
  >
    Light
  </button>
  
  <!-- Theme 3: Nature (Green) -->
  <button
    id="theme-nature"
    data-theme="nature"
    class="theme-btn px-3 py-1 rounded-lg text-sm font-medium transition-all duration-200 bg-green-700 border border-green-600 text-white hover:bg-green-600 active:bg-green-800"
  >
    Nature
  </button>
</div>

<ThemeScript />

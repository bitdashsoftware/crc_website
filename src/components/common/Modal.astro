---
export interface Props {
  id: string;
  title: string;
  achievement: string;
  story: string;
  location: string;
  initials: string;
}

const { id, title, achievement, story, location, initials } = Astro.props;
---

<div id={id} class="modal fixed inset-0 bg-black bg-opacity-50 z-50 hidden flex items-center justify-center p-4">
  <div class="modal-content bg-white rounded-lg max-w-3xl w-full max-h-[85vh] overflow-y-auto shadow-2xl">
    <!-- Modal Header -->
    <div class="flex justify-between items-center p-6 border-b border-gray-200">
      <div>
        <h3 class="text-2xl font-bold text-gray-800">{title}</h3>
        <p class="text-sm text-gray-600 mt-1">{achievement}</p>
        <p class="text-sm text-gray-500">{location}</p>
      </div>
      <button class="modal-close text-gray-400 hover:text-gray-600 text-2xl font-bold" aria-label="Close modal">
        &times;
      </button>
    </div>
    
    <!-- Modal Body -->
    <div class="p-6">
      <!-- Runner Photo/Initials -->
      <div class="flex justify-center mb-6">
        <div class="w-32 h-32 bg-gradient-to-br from-lightgreen-txt-p to-lightgreen-txt-s rounded-full flex items-center justify-center shadow-lg">
          <span class="text-4xl font-bold text-white">
            {initials}
          </span>
        </div>
      </div>
      
      <!-- Full Story -->
      <div class="max-w-none">
        <p class="text-gray-700 leading-relaxed text-lg whitespace-normal">{story}</p>
      </div>
    </div>
  </div>
</div>

<style>
  .modal {
    backdrop-filter: blur(4px);
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
  }
  
  .modal.hidden {
    display: none !important;
  }
  
  .modal-content {
    animation: modalSlideIn 0.3s ease-out;
    transform: translateZ(0);
    max-height: 90vh;
    width: 100%;
    max-width: 48rem;
    margin: 1rem;
  }
  
  @keyframes modalSlideIn {
    from {
      opacity: 0;
      transform: translateY(-20px) scale(0.95) translateZ(0);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1) translateZ(0);
    }
  }
</style> 
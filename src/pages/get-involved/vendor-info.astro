---
import type { GetInvolvedEntry } from "@/types";
import HeroLayout from "@components/common/HeroLayout.astro";
import { getEntry } from "astro:content";
import vendorInfoHero from "@assets/hero/vendro_info_hero.jpg";

const entry = (await getEntry("getInvolved", "vendor-info")) as GetInvolvedEntry;
---

<HeroLayout 
  entry={entry} 
  heroImage={vendorInfoHero}
  contentClass="content-beige"
  heroTextClass="content-lightgreen"
/> 
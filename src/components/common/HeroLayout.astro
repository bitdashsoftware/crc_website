---
import { render } from "astro:content";
import type { CommunityEntry, AboutEntry, BlogEntry, PoetryEntry, RecipeEntry } from "@/types";
import BaseLayout from "@components/base/BaseLayout.astro";

interface Props {
  entry: CommunityEntry | AboutEntry | BlogEntry | PoetryEntry | RecipeEntry;
  heroImage?: any; // Astro image import
  heroImageAlt?: string;
  contentClass?: string;
  heroOverlayOpacity?: number;
  heroMinHeight?: string;
}

const { 
  entry, 
  heroImage, 
  heroImageAlt = "Hero background", 
  contentClass = "content-lightgreen",
  heroOverlayOpacity = 60,
  heroMinHeight = "min-h-screen"
} = Astro.props;

const { title, description, image, imageAlt } = entry.data;
const { Content } = await render(entry);
---

<BaseLayout 
  title={title} 
  description={description} 
  image={image?.src}
>
  <!-- Hero Section with Background Image -->
  <section class={`relative ${heroMinHeight} flex items-center justify-center overflow-hidden -mt-4`}>
    <!-- Background Image -->
    {heroImage && (
      <div class="absolute inset-0 z-0 bg-cover bg-center bg-no-repeat" style={`background-image: url(${heroImage.src});`}>
        <!-- Overlay for better text readability -->
        <div class={`absolute inset-0 bg-black bg-opacity-${heroOverlayOpacity}`}></div>
      </div>
    )}
    
    <!-- Hero Content -->
    <div class="relative z-10 container">
      <div class="row justify-center">
        <div class="text-center lg:col-8">
          <div class={contentClass}>
            <h1 class="mb-4 text-4xl md:text-6xl font-bold text-white drop-shadow-lg">
              {title}
            </h1>
            <p class="mb-8 text-xl text-white drop-shadow-md max-w-3xl mx-auto">
              {description}
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Content Section -->
  <section class="section py-16">
    <div class="container">
      <div class="row justify-center">
        <div class="lg:col-8">
          <div class={contentClass}>
            <Content />
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout> 
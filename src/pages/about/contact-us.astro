---
import type { AboutEntry } from "@/types";
import HeroLayoutWithHTML from "@components/common/HeroLayoutWithHTML.astro";
import ContactForm from "@components/common/ContactForm.astro";
import Social from "@components/common/Social.astro";
import { getEntry } from "astro:content";
import contactUsHero from "@assets/hero/contact_us_hero.jpg";

const entry = (await getEntry("about", "contact-us")) as AboutEntry;
---

<HeroLayoutWithHTML 
  title={entry.data.title}
  description={entry.data.description}
  heroImage={contactUsHero}
  contentClass="content-beige"
  heroTextClass="content-lightgreen"
>
  <div class="max-w-4xl mx-auto">
    <div class="grid md:grid-cols-2 gap-12">
      <!-- Contact Information -->
      <div>
        <h2 class="text-3xl font-bold text-txt-p mb-6">Get in Touch</h2>
        <p class="text-txt-s mb-8">
          We'd love to hear from you! Whether you have questions about our upcoming race, 
          want to get involved with our community, or just want to say hello, we're here to help.
        </p>
        
        <div class="space-y-2">
          <div>
            <h3 class="font-semibold text-txt-p">Email</h3>
            <p class="text-txt-s">info@confluencerunningcollective.com</p>
          </div>
          
          <div>
            <h3 class="font-semibold text-txt-p">Social Media</h3>
            <div class="[&>ul]:pt-0 [&>ul]:mt-0" style="margin-top: -0.5rem;">
              <Social
                links={{
                  facebook: "https://www.facebook.com/profile.php?id=61577578087954",
                  instagram: "https://www.instagram.com/confluencerunningcollective",
                }}
              />
            </div>
          </div>
        </div>
      </div>
      
      <!-- Contact Form -->
      <div>
        <ContactForm 
          title="Send us a Message"
          subtitle="Fill out the form below and we'll get back to you as soon as possible."
          formId="contact-us"
        />
      </div>
    </div>
  </div>
</HeroLayoutWithHTML> 
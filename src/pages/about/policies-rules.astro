---
import type { AboutEntry } from "@/types";
import HeroLayout from "@components/common/HeroLayout.astro";
import { getEntry } from "astro:content";
import policiesRulesHero from "@assets/hero/policies-rules-hero.jpg";

const entry = (await getEntry("about", "policies-rules")) as AboutEntry;
---

<HeroLayout 
  entry={entry} 
  heroImage={policiesRulesHero}
  contentClass="content-beige"
  heroTextClass="content-lightgreen"
  showSideMenu={true}
/> 
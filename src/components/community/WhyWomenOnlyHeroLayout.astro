---
import { render } from "astro:content";
import type { CommunityEntry } from "@/types";
import frontPage from "@assets/why_women_only.jpeg";
import BaseLayout from "@components/base/BaseLayout.astro";

interface Props {
  entry: CommunityEntry;
}

const { entry } = Astro.props;
const { title, description, image, imageAlt } = entry.data;
const { Content } = await render(entry);
---

<BaseLayout 
  title={title} 
  description={description} 
  image={image?.src}
>
  <!-- Hero Section with Background Image -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden -mt-4">
    <!-- Background Image -->
    <div class="absolute inset-0 z-0 bg-cover bg-center bg-no-repeat" style={`background-image: url(${frontPage.src});`}>
      <!-- Overlay for better text readability -->
      <div class="absolute inset-0 bg-black bg-opacity-60"></div>
    </div>
    
    <!-- Hero Content -->
    <div class="relative z-10 container">
      <div class="row justify-center">
        <div class="text-center lg:col-8">
          <div class="content-lightgreen">
            <h1 class="mb-4 text-4xl md:text-6xl font-bold text-white drop-shadow-lg">
              {title}
            </h1>
            <p class="mb-8 text-xl text-white drop-shadow-md max-w-3xl mx-auto">
              {description}
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Content Section -->
  <section class="section py-16">
    <div class="container">
      <div class="row justify-center">
        <div class="lg:col-8">
          <div class="content-lightgreen">
            <Content />
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout> 